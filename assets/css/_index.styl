#index
  font-family: freight-sans-pro

  & > div
    position: relative
    overflow: hidden
    group()

  #header
    gradient: #EED584 #E9B27B
    text-align: center
    height: 55vw

    .light-rays
      absolute: top left
      width: 200%
      margin: -50% 0 0 -50%
      animation: rotate 180s linear infinite

    h1
      position: relative
      z-index: 2
      color: #4B3C28
      upcase()
      font-size: 3.4em
      font-weight: 600
      margin: 0
      padding-top: 15%
      transition()

      +above(1000px)
        font-size: 4.2em

      +below(600px)
        padding-top: 10%

      +below(450px)
        font-size: 2.5em

    h2
      position: relative
      z-index: 2
      color: #FAEAD1
      font-weight: 400
      font-size: 1.2em
      margin: -10px 0 0 0
      downcase()
      transition()

      +above(1000px)
        font-size: 1.4em

      +below(450px)
        font-size: .86em
        margin-top: -8px

    .clouds img
      absolute: top left -120px
      transform: translate3d(0, 0, 0)
      animation-timing-function: linear
      animation-iteration-count: infinite

      &:nth-child(1)
        top: 28vw
        animation-name: drift
        animation-delay: 3s
        animation-duration: 150s

      &:nth-child(2)
        top: 14vw
        left: 0
        transform: translate3d(100vw, 0, 0)
        animation-name: drift
        animation-direction: reverse
        animation-duration: 120s

      &:nth-child(3)
        top: 5vw
        animation-name: drift
        animation-delay: 25s
        animation-duration: 80s

  #intro
    gradient: #C1CDA1 #86BBE0

    h3
      font-family: sommet-rounded
      font-size: 1.5em
      margin: 0 0 1.3em 0
      text-align: center
      color: #FCFFF4

      & ~ h3
        margin: 1.3em

    .text
      max-width: 680px
      padding: 0 30px
      margin: 25px auto 50px auto
      color: #51513C
      line-height: 1.4em

      p
        font-size: 1.13em
        line-height: 1.55em
        -webkit-font-smoothing: subpixel-antialiased

        +below(400px)
          font-size: 1em

      a
        link: darken(#B0C8B4, 35%)
        font-weight: 600

    .video
      width: 80%
      margin: 0 auto
      position: relative
      z-index: 2

      h3
        margin-top: 1em

      .stage
        width: 100%
        height: 50vw
        background: #3E3E3E
        position: relative

        h2
          margin: 0
          padding: .6em 1em 1em 1em
          gradient: rgba(#000,1) rgba(#000,0)
          color: white
          font-weight: 500
          position: relative
          z-index: 2

          +below(1000px)
            font-size: 1.2em

          +below(800px)
            font-size: 1em

        iframe
          width: 100%
          height: 100%
          absolute: top left

      +below(700px)
        width: 90%
        height: 42vw


  #resources
    gradient: #7395BE #4C4B77
    color: #35404C

    .more-videos

      h3
        font-family: sommet-rounded
        font-size: 1.5em
        margin: 1.3em 0
        text-align: center
        color: #FCFFF4

        +below(600px)
          font-size: 1.2em

      ul
        inline-list: 19px
        text-align: center
        width: 80%
        margin: 0 auto

        li
          cursor: pointer
          position: relative
          width: 18%
          margin-right: 2.4%
          margin-bottom: 15px

          &:nth-child(5n)
            margin-right: 0

          +below(700px)
            width: 32%
            margin-right: 2%

            &:nth-child(5n)
              margin-right: 2%

            &:nth-child(3n)
              margin-right: 0

          img
            max-width: 100%
            display: block
            margin-bottom: 5px
            border: 3px solid transparent
            transition()

          &.active img
            border: 3px solid #555D88

        span
          font-weight: 600
          color: #35404c
          font-size: .9em

    .links
      reset-list()
      max-width: 600px
      padding: 0 30px
      margin: 7% auto 25% auto

      a
        color: #35404C
        group()

        &:hover .icon
          transform: scale(1.1) rotate(-3deg)

      h3
        font-family: sommet-rounded
        font-size: 1.3em
        color: #E0E9F4
        margin: 0.3em 0 0.5em 0

      li
        group()
        margin-bottom: 30px

        +below(500px)
          margin-bottom: 15px

        +below(400px)
          text-align: center

        &:nth-child(1) .icon
          padding: 32px 27px

          +below(500px)
            padding: 29px 24px

        &:nth-child(2) .icon
          padding: 37px 28px

          +below(500px)
            padding: 34px 25px

        &:nth-child(3) .icon
          padding: 30px 34px

          +below(500px)
            padding: 30px 32px

      a
        group()

      .icon, .text
        float: left

      .text
        width: 70%

        +below(500px)
          width: 60%

        +below(400px)
          width: 100%

      .icon
        size: 100px
        rounded()
        background: #D1DAE7
        margin-right: 25px
        text-align: center
        transition()
        border-box()

        img
          max-width: 100%

        +below(500px)
          size: 90px

        +below(400px)
          float: none
          margin: 0 auto 10px auto
